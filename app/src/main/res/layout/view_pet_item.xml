<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="petObservable"
            type="info.juanmendez.petgallery.ui.petlist.viewmodel.PetObservable"/>

        <variable
            name="petListObservable"
            type="info.juanmendez.petgallery.ui.services.PetListObservable"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            app:picassoSrc="@{petObservable.breed.pictureList}"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:layout_weight="1">

            <ImageView
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:text="@{petObservable.breed.name}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>